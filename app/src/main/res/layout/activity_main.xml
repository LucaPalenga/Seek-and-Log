<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/load_module_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/load_module_string"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/load_module_btn" />

    <Button
        android:id="@+id/load_module_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_module"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/load_module_btn"
        app:layout_constraintStart_toStartOf="@id/load_module_btn"
        app:layout_constraintTop_toBottomOf="@id/load_module_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>